/* ========================================
   FOLDER-BROWSER.CSS - CLEANED (UNIQUE STYLES ONLY)
   ======================================== */

/* ========================================
   FOLDER BROWSER LAYOUT - UNIQUE
   ======================================== */

.folder-browser {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 1rem;
    height: 100%;
    overflow: hidden;
}

/* ========================================
   FOLDER TREE SPECIFIC STYLES - UNIQUE
   ======================================== */

.folder-tree {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.folder-tree h3 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    flex-shrink: 0;
}

.tree-container {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    min-height: 0;
}

/* ========================================
   TREE NODE STRUCTURE - UNIQUE
   ======================================== */

.tree-node {
    margin-bottom: 2px;
}

.tree-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    white-space: nowrap;
    min-height: 32px;
}

.tree-item:hover {
    background: var(--surface-elevated);
}

.tree-item.selected {
    background: var(--primary);
    color: white;
}

.tree-item.has-children {
    cursor: pointer;
}

.tree-toggle {
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: var(--text-secondary);
    cursor: pointer;
    user-select: none;
    flex-shrink: 0;
}

.tree-spacer {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.folder-icon {
    font-size: 14px;
    flex-shrink: 0;
}

.folder-name {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.song-count {
    font-size: 0.75rem;
    color: var(--text-secondary);
    opacity: 0.8;
    flex-shrink: 0;
}

.tree-item.selected .song-count {
    color: rgba(255, 255, 255, 0.8);
}

.tree-children {
    overflow: hidden;
    transition: max-height 0.3s ease;
}

.tree-children.hidden {
    max-height: 0;
}

.tree-children:not(.hidden) {
    max-height: 2000px;
}

/* ========================================
   SONG LIST PANEL SPECIFIC - UNIQUE
   ======================================== */

.song-list-panel {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.song-list-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-bottom: 1px solid var(--border);
    background: var(--surface-elevated);
    flex-shrink: 0;
}

.song-list-header h3 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.list-controls {
    display: flex;
    gap: 0.5rem;
}

.song-list-content {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    min-height: 0;
}

.song-list {
    padding: 0.5rem;
}

/* ========================================
   FOLDER-BROWSER SPECIFIC SONG CARD - UNIQUE
   ======================================== */

.song-card {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    cursor: pointer;
    border: 1px solid transparent;
    margin-bottom: 4px;
}

.song-card:hover {
    background: var(--surface-elevated);
    border-color: var(--border);
    transform: translateY(-1px);
}

.song-card.playing {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

/* Song Artwork - UNIQUE SIZING */
.song-artwork {
    width: 40px;
    height: 40px;
    border-radius: 4px;
    background: var(--surface-elevated);
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.album-placeholder {
    color: var(--text-secondary);
    opacity: 0.6;
}

.song-card.playing .album-placeholder {
    color: rgba(255, 255, 255, 0.8);
}

/* Song Info - UNIQUE LAYOUT */
.song-info {
    min-width: 0;
    flex: 1;
}

.song-title {
    font-weight: 500;
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--text-primary);
}

.song-artist {
    font-size: 0.75rem;
    color: var(--text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.song-album {
    font-size: 0.75rem;
    color: var(--text-secondary);
    opacity: 0.8;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.song-card.playing .song-title,
.song-card.playing .song-artist,
.song-card.playing .song-album {
    color: white;
}

.song-metadata {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-align: right;
    white-space: nowrap;
}

.song-card.playing .song-metadata {
    color: rgba(255, 255, 255, 0.8);
}

/* Add Song Button - UNIQUE */
.add-song-btn {
    opacity: 0;
    transition: opacity 0.2s ease;
}

.song-card:hover .add-song-btn {
    opacity: 1;
}

.song-card.playing .add-song-btn {
    opacity: 1;
    color: white;
}

/* ========================================
   MUSIC CONTENT AREA - UNIQUE
   ======================================== */

.music-content {
    height: 100%;
    overflow: hidden;
}

/* ========================================
   FOLDER BROWSER SPECIFIC RESPONSIVE - UNIQUE
   ======================================== */

@media (max-width: 1200px) {
    .folder-browser {
        grid-template-columns: 250px 1fr;
    }
}

@media (max-width: 900px) {
    .folder-browser {
        grid-template-columns: 1fr;
        grid-template-rows: 200px 1fr;
    }

    .folder-tree {
        max-height: 200px;
    }
}

/* ========================================
   FOLDER BROWSER SPECIFIC SCROLLBARS - UNIQUE
   ======================================== */

.tree-container::-webkit-scrollbar,
.song-list-content::-webkit-scrollbar {
    width: 8px;
}

.tree-container::-webkit-scrollbar-track,
.song-list-content::-webkit-scrollbar-track {
    background: var(--surface);
    border-radius: 4px;
}

.tree-container::-webkit-scrollbar-thumb,
.song-list-content::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 4px;
}

.tree-container::-webkit-scrollbar-thumb:hover,
.song-list-content::-webkit-scrollbar-thumb:hover {
    background: var(--text-secondary);
}

/* ========================================
   FOLDER BROWSER ACCESSIBILITY - UNIQUE
   ======================================== */

.tree-item:focus,
.song-card:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
}

/* High contrast mode for tree items */
@media (prefers-contrast: high) {

    .tree-item:hover,
    .song-card:hover {
        border: 2px solid var(--primary);
    }
}

