{
  "name": "que-music",
  "version": "3.1.0",
  "description": "Music player and library manager built with Electron",
  "main": "main.js",
  "author": "Que",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build-css && electron-builder",
    "dist-win": "npm run build-css && electron-builder --win",
    "format": "prettier --write .",
    "rebuild": "electron-rebuild",
    "build-css": "node build-css.js",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.3.0",
    "music-metadata": "^7.14.0",
    "node-id3": "^0.2.9",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.erichquade.quemusic",
    "productName": "Que-Music",
    "copyright": "Created by Que 2025",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "client/**/*",
      "server/**/*",
      "assets/icons/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!docs/**/*",
      "!original/**/*",
      "!older files/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/covers",
        "to": "covers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Que-Music",
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "installerHeaderIcon": "assets/icons/icon.ico",
      "runAfterFinish": true,
      "menuCategory": "AudioVideo",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "displayLanguageSelector": false,
      "language": "1033"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "fileAssociations": [
        {
          "ext": "mp3",
          "name": "MP3 Audio File",
          "description": "MP3 Audio File",
          "icon": "assets/icons/music.ico"
        },
        {
          "ext": "flac",
          "name": "FLAC Audio File",
          "description": "FLAC Lossless Audio File",
          "icon": "assets/icons/music.ico"
        },
        {
          "ext": "wav",
          "name": "WAV Audio File",
          "description": "WAV Audio File",
          "icon": "assets/icons/music.ico"
        },
        {
          "ext": "m4a",
          "name": "M4A Audio File",
          "description": "MPEG-4 Audio File",
          "icon": "assets/icons/music.ico"
        },
        {
          "ext": "ogg",
          "name": "OGG Audio File",
          "description": "Ogg Vorbis Audio File",
          "icon": "assets/icons/music.ico"
        },
        {
          "ext": "aac",
          "name": "AAC Audio File",
          "description": "Advanced Audio Codec File",
          "icon": "assets/icons/music.ico"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "fileAssociations": [
        {
          "ext": "mp3",
          "name": "MP3 Audio File",
          "description": "MP3 Audio File"
        },
        {
          "ext": "flac",
          "name": "FLAC Audio File",
          "description": "FLAC Lossless Audio File"
        },
        {
          "ext": "wav",
          "name": "WAV Audio File",
          "description": "WAV Audio File"
        },
        {
          "ext": "m4a",
          "name": "M4A Audio File",
          "description": "MPEG-4 Audio File"
        },
        {
          "ext": "ogg",
          "name": "OGG Audio File",
          "description": "Ogg Vorbis Audio File"
        },
        {
          "ext": "aac",
          "name": "AAC Audio File",
          "description": "Advanced Audio Codec File"
        }
      ]
    },
    "linux": {
      "category": "AudioVideo",
      "icon": "assets/icons/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "mp3",
          "name": "MP3 Audio File",
          "description": "MP3 Audio File",
          "mimeType": "audio/mpeg"
        },
        {
          "ext": "flac",
          "name": "FLAC Audio File",
          "description": "FLAC Lossless Audio File",
          "mimeType": "audio/flac"
        },
        {
          "ext": "wav",
          "name": "WAV Audio File",
          "description": "WAV Audio File",
          "mimeType": "audio/wav"
        },
        {
          "ext": "m4a",
          "name": "M4A Audio File",
          "description": "MPEG-4 Audio File",
          "mimeType": "audio/mp4"
        },
        {
          "ext": "ogg",
          "name": "OGG Audio File",
          "description": "Ogg Vorbis Audio File",
          "mimeType": "audio/ogg"
        },
        {
          "ext": "aac",
          "name": "AAC Audio File",
          "description": "Advanced Audio Codec File",
          "mimeType": "audio/aac"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Que",
      "repo": "que-music"
    }
  }
}